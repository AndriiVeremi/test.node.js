{{#each this}}
<li class="gallery__item">
    <div class="gallery__thumb" 
    <img src="{{flag}}" alt="Флаг {{name}}" width="320">
    </div>
    <h2>{{name}}</h2>
    <p><b>Столиця:</b>{{capital}}</p>
    <p><b>Валюта:</b>{{currency}}</p>
    <p><b>Мова:</b>{{language}}</p>
    <p><b>Населення:</b>{{population}}</p>

    {{#if infected}}  
    <p style="color: red;">Все пропало !!!!!!!!!!!!</p>
    {{/if}}

    {{#unless infected}}  
    <p style="color: green;">Будем ЖиТи :) !</p>
    {{/unless
    }}
</li>
{{/each}}